<div class="column <%= title %>">
	<h1><%= title %></h1>
	<table>
		<thead>
			<tr>
				<% things[:columns].each do |key| %>
					<th><%= key.gsub("_", " ").capitalize %></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% things[:marked].each do |thing| %>
				<%= render "shared/row", thing: thing, mark: things[:top] ? "topmark" : "mark", columns: things[:columns] %>
			<% end %>
			<% things[:rest].each do |thing| %>
				<%= render "shared/row", thing: thing, columns: things[:columns], mark: "" %>
			<% end %>
		</tbody>
	</table>
</div>